{
    "analysis": {
        "type": "standard",
        "folder": "test/.tmp",
        "params": {
            "train": 0.200,
            "val": 0.134,
            "test": 0.666,
            "epochs_between_validation": 5
        }
    },
    "market": {
        "type": "live-daily-historical",
        "params": {
            "features": ["SPY"],
            "targets": ["SPY"],
            "trading_cost": 0.0001,
            "source": "yahoo",
            "start_date": "01-01-2008",
            "end_date": "20-12-2010",
            "feature_keys": ["Volume", "Open", "High", "Close"],
            "target_keys": "Adj Close"
        }
    },
    "agent": {
        "type": "supervised",
        "params": {
            "predictor": {
                "type": "chalvatzis",
                "params": {
                    "first_column_cash": true,
                    "initial_learning_rate": 0.01, 
                    "learning_rate_decay": 0.999999,
                    "epochs": 10,
                    "iter_per_item": 3,
                    "predict_returns": false,
                    "window_size": 22,
                    "dropout": 0.5,
                    "hidden_size": [10, 10],
                    "normalize": {
                        "active": true,
                        "min": -1,
                        "max": 1
                    }
                }
            },
            "trader": {
                "type": "chalvatzis",
                "params": {
                    "first_column_cash": true
                }
            }
        }
    },
    "benchmark": {
        "type": "supervised",
        "params": {
            "predictor": {
                "type": "flat",
                "params": {
                    "first_column_cash": true
                }
            },
            "trader": {
                "type": "buy_and_hold",
                "params": {
                    "first_column_cash": true
                }
            }
        }

    }
}