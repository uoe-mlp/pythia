{
    "analysis": {
        "type": "standard",
        "folder": "data/experiments/chalvatzis_short",
        "params": {
            "train": 0.666,
            "val": 0.200,
            "test": 0.134,
            "epochs_between_validation": 10
        }
    },
    "market": {
        "type": "live-daily-historical",
        "params": {
            "features": ["SPY"],
            "targets": ["SPY"],
            "trading_cost": 0,
            "source": "yahoo",
            "start_date": "01-01-2005",
            "end_date": "20-12-2019",
            "feature_keys": ["Open", "High", "Low", "Close", "Adj Close", "Prev. Adj Close"],
            "target_keys": "Adj Close"
        }
    },
    "agent": {
        "type": "supervised",
        "params": {
            "predictor": {
                "type": "chalvatzis_func",
                "params": {
                    "first_column_cash": true,
                    "initial_learning_rate": 1e-4,
                    "learning_rate_decay": 1,
                    "epochs": 2000,
                    "iter_per_item": 1,
                    "update_iter_per_item": 1,
                    "predict_returns": true,
                    "consume_returns": true,
                    "window_size": 20,
                    "l2": 0.01,
                    "dropout": 0.5,
                    "update_rolling_window": 100, 
                    "batch_size": 500,
                    "hidden_size": [128, 128, 128],
                    "normalize": {
                        "active": true,
                        "min": -0.1,
                        "max": 0.1
                    }
                }
            },
            "trader": {
                "type": "chalvatzis",
                "params": {
                    "first_column_cash": true
                }
            }
        }
    },
    "benchmark": {
        "type": "supervised",
        "params": {
            "predictor": {
                "type": "flat",
                "params": {
                    "first_column_cash": true
                }
            },
            "trader": {
                "type": "buy_and_hold",
                "params": {
                    "first_column_cash": true
                }
            }
        }
    }
}